<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/image1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/pazul1"
        android:text="1" />

    <Button
        android:id="@+id/image2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image1"
        android:background="@drawable/pazul2"
        android:text="2" />

    <Button
        android:id="@+id/image3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image2"
        android:background="@drawable/pazul3"
        android:text="3" />


    <Button
        android:id="@+id/image4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/image3"
        android:background="@drawable/pazul_none"
        android:text="4" />

    <Button
        android:id="@+id/image5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image1"
        android:background="@drawable/pazul4"
        android:text="5" />

    <Button
        android:id="@+id/image6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image2"
        android:layout_toEndOf="@+id/image1"
        android:background="@drawable/pazul5"
        android:text="6" />

    <Button
        android:id="@+id/image7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_above="@+id/image11"
        android:layout_toEndOf="@+id/image6"
        android:background="@drawable/pazul6"
        android:text="7" />

    <Button
        android:id="@+id/image8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image3"
        android:layout_toEndOf="@+id/image7"
        android:background="@drawable/pazul7"
        android:text="8" />

    <Button
        android:id="@+id/image9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image5"
        android:background="@drawable/pazul8"
        android:text="9" />

    <Button
        android:id="@+id/image10"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image6"
        android:layout_toEndOf="@+id/image9"
        android:background="@drawable/pazul9"
        android:text="10" />

    <Button
        android:id="@+id/image11"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image6"
        android:layout_toEndOf="@+id/image10"
        android:background="@drawable/pazul10"
        android:text="11" />

    <Button
        android:id="@+id/image12"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image8"
        android:layout_toEndOf="@+id/image7"
        android:background="@drawable/pazul11"
        android:text="12" />


    <Button
        android:id="@+id/image13"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image9"
        android:background="@drawable/pazul12"
        android:text="13" />

    <Button
        android:id="@+id/image14"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image9"
        android:layout_toEndOf="@+id/image13"
        android:background="@drawable/pazul13"
        android:text="14" />

    <Button
        android:id="@+id/image15"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image10"
        android:layout_toEndOf="@+id/image14"
        android:background="@drawable/pazul14"
        android:text="15" />

    <Button
        android:id="@+id/image16"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/image12"
        android:layout_toEndOf="@+id/image15"
        android:background="@drawable/pazul15"
        android:text="16" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image14"
        android:layout_marginStart="42dp"
        android:layout_marginTop="42dp"
        android:layout_toEndOf="@+id/image13"
        android:text="START" />

</RelativeLayout>